page, .page, .page__bd {
      height: 100%;
}

.page__bd {
      padding-bottom: 0;
}

form {
      width: 100%;
      height: 100%;
}

.weui-navbar {
      background: #fff;
}

.weui-tab__content {
      margin-bottom: 100rpx;
}

.no_data {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      position: absolute;
      top: 0;
      left: 0;
      background: #f7f7f7;
}

.no_data image {
      width: 201.7rpx;
      height: 163.8rpx;
}

.no_data text {
      font-family: 'PingFangSC-Regular';
      font-size: 26rpx;
      color: #333;
}

.usable_balance {
      background-color: #fff;
      height: 88rpx;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 24rpx;
      font-size: 26rpx;
      border-bottom: 1rpx solid #e5e5e5;
}

.usable_balance .color {
      color: #f93473;
}

.bindNewCard {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 88rpx;
      background: #4bc6b1;
      color: #fff;
      font-family: 'PingFangSC-Regular';
      font-size: 34rpx;
      border: unset;
      border-radius: unset;
}

.usable_list .usable_item {
      width: 702rpx;
      height: 262rpx;
      position: relative;
      margin: 20rpx auto 0;
}

.usable_list .usable_item .usable_item_bg {
      position: absolute;
      width: 100%;
      height: 100%;
      left: 0;
      top: 0;
      z-index: -1;
}

.usable_list .usable_item .usable_item_t {
      height: 188rpx;
      padding: 0 42rpx;
}

.usable_list .usable_item .usable_item_t .usable_item_t_n {
      font-family: 'PingFangSC-Regular';
      font-size: 26rpx;
      color: #ff8f4f;
      padding-top: 36rpx;
}

.usable_list .usable_item .usable_item_t .usable_item_t_e {
      font-family: 'PingFangSC-Regular';
      font-size: 26rpx;
      color: #4a4a4a;
      padding-top: 10rpx;
}

.usable_list .usable_item .usable_item_t .usable_item_t_e text {
      font-family: 'PingFangSC-Regular';
      font-size: 50rpx;
      color: #4a4a4a;
}

.usable_list .usable_item .usable_item_b {
      height: 64rpx;
      display: flex;
      padding: 0 42rpx;
      justify-content: space-between;
      align-items: center;
}

.usable_list .usable_item .usable_item_b text {
      font-family: 'PingFangSC-Regular';
      font-size: 22rpx;
      color: #9b9b9b;
}

.disable_list .usable_item {
      width: 702rpx;
      height: 262rpx;
      position: relative;
      margin: 20rpx auto 0;
}

.disable_list .usable_item .usable_item_bg {
      position: absolute;
      width: 100%;
      height: 100%;
      left: 0;
      top: 0;
      z-index: -1;
}

.disable_list .usable_item .usable_item_t {
      height: 188rpx;
      padding: 0 42rpx;
}

.disable_list .usable_item .usable_item_t .usable_item_t_n {
      font-family: 'PingFangSC-Regular';
      font-size: 26rpx;
      color: #9b9b9b;
      padding-top: 36rpx;
}

.disable_list .usable_item .usable_item_t .usable_item_t_e {
      font-family: 'PingFangSC-Regular';
      font-size: 26rpx;
      color: #9b9b9b;
      padding-top: 10rpx;
}

.disable_list .usable_item .usable_item_t .usable_item_t_e text {
      font-family: 'PingFangSC-Regular';
      font-size: 50rpx;
      color: #4a4a4a;
}

.disable_list .usable_item .usable_item_t .usable_item_t_e label {
      font-family: 'PingFangSC-Regular';
      font-size: 50rpx;
      color: #9b9b9b;
      float: right;
      margin-right: 30rpx;
}

.disable_list .usable_item .usable_item_b {
      height: 64rpx;
      display: flex;
      padding: 0 42rpx;
      justify-content: space-between;
      align-items: center;
}

.disable_list .usable_item .usable_item_b text {
      font-family: 'PingFangSC-Regular';
      font-size: 22rpx;
      color: #9b9b9b;
}

.sum {
      background-color: #fff;
      padding: 27rpx 30rpx;
      border-bottom: 2rpx solid #e5e5e5;
}

.sum  .gift_sum, .sum .total_sum {
      display: flex;
      justify-content: space-between;
      align-items: center;
}

.sum  .gift_sum label, .sum .total_sum label {
      float: left;
      font-family: 'PingFangSC-Medium';
      font-size: 26rpx;
      color: #4a4a4a;
}

.sum  .gift_sum text, .sum .total_sum text {
      float: right;
      overflow: hidden;
      font-family: 'PingFangSC-Medium';
      font-size: 26rpx;
      color: #f93473;
}

.record {
      background-color: #fff;
}

.record_title {
      background-color: #f7f7f7;
      padding: 0 24rpx;
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 60rpx;
}

.record_con_list_slot {
      height: 80rpx;
      line-height: 80rpx;
      padding: 0 30rpx;
      background-color: #f7f7f7;
      font-size: 26rpx;
}

.record_con_item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 2rpx solid #eee;
      padding: 0 20rpx;
      height: 96rpx;
      font-size: 26rpx;
}

.record_con_item div {
      font-family: 'PingFangSC-Regular';
      font-size: 26rpx;
      color: #9b9b9b;
}

.record_con_item    .record_con_list_right {
      text-align: right;
}

.record_con_item    .record_con_list_right text {
      display: block;
      font-size: 26rpx;
}

.record_con_item    .record_con_list_right .cen_p {
      color: #f93473;
}

.record_con_item    .record_con_list_right .cen_t {
      color: #9b9b9b;
}

.record_con_item .record_con_list_left text {
      display: block;
      font-size: 26rpx;
	font-family: 'PingFangSC-Regular';
	color: #9B9B9B;
}

.check_box {
      position: absolute;
      top: 88rpx;
      right: 40rpx;
      width: 40rpx;
      height: 40rpx;
}
