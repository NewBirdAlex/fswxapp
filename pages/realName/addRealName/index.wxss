page {
      background-color: #f7f7f7;
      overflow-x: hidden;
}

.identity_msg_title {
      padding: 20rpx;
      margin-left: 40rpx;
      font-size: 28rpx;
      color: #888;
      width: 100%;
}

.identity_input {
      background-color: #fff;
      border-bottom: 1rpx solid #e5e5e5;
      border-top: 1rpx solid #e5e5e5;
      width: 100%;
}

.identity_input input {
      height: 88rpx;
      width: 100%;
      font-size: 34rpx;
      color: #4a4a4a;
      padding-left: 20rpx;
      padding-right: 20rpx;
}

.identity_input_name {
      border-bottom: 2rpx solid #e5e5e5;
}

.identity_pic {
      background-color: #fff;
      width: 100%;
}

.identity_pic_upload {
      padding: 49rpx 20rpx 20rpx;
      display: flex;
      justify-content: space-between;
      width: unset;
}

.identity_pic_upload image {
      width: 336rpx;
      height: 212rpx;
      position: relative;
}

.identity_pic_upload image view {
      position: absolute;
      width: 100%;
      height: 212rpx;
      top: 0rpx;
      left: 0rpx;
      background-color: rgba(0, 0, 0, 0.2);
}

.identity_pic_upload image text {
      position: absolute;
      width: 100%;
      height: 212rpx;
      top: 0rpx;
      left: 0rpx;
      background-color: rgba(0, 0, 0, 0.3);
      display: flex;
      justify-content: center;
      align-items: center;
}

.identity_pic_demo {
      display: flex;
      justify-content: center;
      text-align: center;
      padding-bottom: 30rpx;
}

.identity_pic_demo view {
      display: flex;
      flex-direction: column;
	width: 50%;
}

.identity_pic_demo view image {
      width: 130rpx;
      height: 82rpx;
      margin: auto;
}

.identity_pic_demo view text {
      font-size: 24rpx;
      color: #888;
}

.container .identity_state {
      display: flex;
      flex-direction: column;
      padding: 40rpx 30rpx 128rpx;
      width: unset;
}

.identity_state text {
      color: #b2b2b2;
}

.identity_state .identity_state_title {
      font-size: 28rpx;
      text-align: center;
}

.identity_state .identity_state_label {
      font-size: 22rpx;
      text-indent: 2em;
}

.add-real {
      position: fixed;
      bottom: 0;
      width: 100%;
      height: 88rpx;
      left: 0;
      background: #4bc6b1;
      font-size: 34rpx;
      color: #fff;
      text-align: center;
      line-height: 88rpx;
      border-radius: unset;
}

.add-real::after {
      border-radius: unset;
}
