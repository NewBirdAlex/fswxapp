/* pages/afterSales/detail/index.wxss */
@import "../../../template/afterSalesItem.wxss";

page {
  background-color: #f7f7f7;
}

.contact {
  color: #04c5b4;
  font-size: 24rpx;
  width: 191rpx;
  height: 55rpx;
  border: 2rpx solid #04c5b4;
  border-radius: 4rpx;
  margin: 40rpx 24rpx 20rpx 0rpx;
  background-color: #fff;
  line-height: 55rpx;
}

.con_btn button[plain] {
  color: #04c5b4;
  font-size: 24rpx;
  width: 191rpx;
  height: 55rpx;
  border: 2rpx solid #04c5b4;
  border-radius: 4rpx;
  margin: 40rpx 24rpx 20rpx 0rpx;
  background-color: #fff;
}

.refund-status {
  display: flex;
  height: 88rpx;
  background: #ff4882;
  align-items: center;
  color: white;
  font-size: 26rpx;
  width: 100%;
}

.refund-status-img {
  width: 38rpx;
  height: 38rpx;
  margin-left: 30rpx;
}

.refund-amount-holder {
  display: flex;
  height: 88rpx;
  background: white;
  align-items: center;
  margin-top: 20rpx;
}

.refund-amount-text {
  color: #4a4a4a;
  font-size: 26rpx;
  margin-left: 30rpx;
}

.refund-amount-money {
  float: right;
  color: #ff4882;
  font-size: 26rpx;
  margin-right: 30rpx;
}

.divider {
  padding-top: 1rpx;
  background: #e5e5e5;
}

.good-info-extra {
  padding-left: 22rpx;
  background: white;
  padding-top: 20rpx;
}

.refund-info-title {
  display: flex;
  height: 88rpx;
  background: white;
  align-items: center;
  margin-top: 20rpx;
  color: #4a4a4a;
  font-size: 26rpx;
  padding-left: 30rpx;
}

.progress {
  background: #fff;
  padding: 30rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.progress .line {
  display: block;
  position: absolute;
  width: 440rpx;
  height: 2px;
  background: #04c5b4;
  left: 155rpx;
  top: 125rpx;
}

.progress .pro_container {
  display: flex;
}

.pro_container .item {
  flex: 1;
  text-align: center;
}

.item .imgwrap {
  display: block;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #04c5b4;
  border-radius: 50%;
  margin: 30rpx auto;
  background: white;
  position: relative;
  z-index: 10;
}

.item .imgwrap image {
  width: 40rpx!important;
}

.item .active {
  background: #04c5b4;
}

.item view {
  font-size: 22rpx;
}

.item view:last-child {
  font-size: 18rpx;
}




.mask {
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.container {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: white;
  height: auto;
  text-align: center;
  z-index: 5000;
  width: 80%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.container input {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  border: 1px solid #dedede;
  padding: 4px 5px;
  outline: none;
  font-size: 16px;
}
.opr{
  width: 100%;
  display:flex;
  border-top: 1px solid #999;  
}
.opr view{
  flex: 1;
  line-height: 80rpx;
  font-size: 28rpx;
}
.red{
  color: #f93473;
}
.m_d{
  font-size: 28rpx;
  padding: 30rpx 22rpx;
}