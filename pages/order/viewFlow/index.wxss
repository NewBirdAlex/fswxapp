@import '/style/weui.wxss';

.space {
      width: 100%;
      height: 20rpx;
      background-color: #f7f7f7;
}

.code {
      height: 70rpx;
      line-height: 70rpx;
      font-size: 28rpx;
      color: #4a4a4a;
      background: #fff;
      padding: 0 20rpx;
}

.code-word {
      color: #f93473;
      float: right;
}

.big-contain {
      margin-left: 40rpx;
      padding-left: 50rpx;
      border-left: 1rpx solid #e4e4e4;
      padding-bottom: 10rpx;
      margin-top: 40rpx;
}

.top-word {
      font-size: 28rpx;
      color: #9b9b9b;
      padding-bottom: 20rpx;
      margin-right: 40rpx;
      margin-top: 20rpx;
      border-bottom: 1rpx solid #e4e4e4;
}

.big-cir {
      height: 25rpx;
      width: 25rpx;
      border-radius: 50%;
      background: #4bc6b1;
      border: 6rpx solid #c4ece5;
      position: absolute;
      margin-left: -67rpx;
}

.small-cir {
      height: 18rpx;
      width: 18rpx;
      border-radius: 50%;
      background: #4bc6b1;
      position: relative;
      margin-left: -59rpx;
      top: 40rpx;
}

.time {
      margin-top: 10rpx;
}

.top-info {
      color: #0036ff;
}

.top-des {
      color: #f93473;
}

.scroll-view-item {
      width: 200rpx;
      height: 90rpx;
      text-align: center;
      line-height: 90rpx;
      font-size: 30rpx;
      color: #4bc6b1;
      position: relative;
}

.scroll-view-item::after {
      position: absolute;
      height: 4rpx;
      width: 200rpx;
      content: " ";
      left: 0;
      bottom: 0;
      right: 0;
      border-bottom: 4rpx solid #4bc6b1;
      color: #4bc6b1;
      -webkit-transform-origin: 0 100%;
      transform-origin: 0 100%;
      -webkit-transform: scaleY(1);
      transform: scaleY(1);
	z-index: 1;
}

.scroll-row {
      display: -webkit-box;
      overflow-x: auto;
	position: relative;
	width: 100%;
}

.scroll-row::after {
      position: absolute;
      height: 4rpx;
      width: 100%;
      content: " ";
      left: 0;
      bottom: 0;
      right: 0;
      border-bottom: 4rpx solid #e4e4e4;
      color: #e4e4e4;
      -webkit-transform-origin: 0 100%;
      transform-origin: 0 100%;
      -webkit-transform: scaleY(1);
      transform: scaleY(1);
}

