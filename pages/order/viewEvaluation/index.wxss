page {
      background: #f7f7f7;
}

.good-contain {
      width: 100%;
      display: flex;
      flex-direction: row;
      justify-content: flex-start;
      padding: 22rpx;
      background: #fff;
      box-sizing: border-box;
      margin-top: 20rpx;
}

.good-img {
      width: 125rpx;
      height: 125rpx;
}

.good-right {
      flex: 1;
      width: 60%;
}

.good-tit {
      height: 40rpx;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: 28rpx;
      color: #4a4a4a;
      margin-left: 20rpx;
}

.star {
      width: 28rpx;
      height: 28rpx;
      margin-left: 10rpx;
}

.star:first-child {
      margin-left: 20rpx;
      margin-top: 20rpx;
}

.good-weight {
      margin-top: 10rpx;
      font-size: 20rpx;
      color: #9b9b9b;
      margin-left: 20rpx;
}

.weight-detail {
      float: right;
}

.eva-content {
      font-size: 26rpx;
      color: #4a4a4a;
      padding-left: 20rpx;
      background: #fff;
      box-sizing: border-box;
      padding-bottom: 10rpx;
      padding-right: 20rpx;
	width: 100%;
}

.eva-part {
      padding: 0 20rpx;
      padding-bottom: 35rpx;
      box-sizing: border-box;
      background: #fff;
	width: 100%;
}

.eva-img {
      width: 200rpx;
      height: 200rpx;
      margin-right: 20rpx;
      margin-top: 20rpx;
}
