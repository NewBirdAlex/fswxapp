@import "../../template/subjectItem.wxss";
@import "../../template/flashSale.wxss";

.fence-title {
  display: flex;
  align-items: center;
  height: 100rpx;
  font-size: 30rpx;
  color: #333;
}

.fence-title-icon {
  height: 42rpx;
  width: 42rpx;
  margin-left: 30rpx;
}

.banner-holder {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 50%;
}

.banner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.banner-item-image {
  width: 100%;
  height: 100%;
}

.category-item {
  width: 25%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 100rpx;
  height: 100rpx;
}
.category-icon-top {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
}
.category-name {
  font-size: 24rpx;
  margin-top: 8rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.weui-search-bar {
	align-items: center;
}
.weui-search-bar__cancel-btn {
	font-size: 32rpx;
	color: #04C5B4;
}